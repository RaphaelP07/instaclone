<div class="post">
  <div class="post-author">
    <div class="avatar avatar-<%=rand(1..27)%>"></div>
    <div><%= post.user.username %></div>
  </div>
  <div class="post-body">
    <span><%= post.body %></span>
  </div>
  <div class="post-actions">
    <% if post.likes.where(user_id: current_user.id).any? %>
      <%= turbo_frame_tag "post-likes" do %>
        <%= button_to "", post_likes_path(post), class: "post-actions-liked", method: :delete %>
      <% end %>
    <% else %>
      <%= turbo_frame_tag "post-likes" do %>
        <%= button_to "", post_likes_path(post), class: "post-actions-like" %>
      <% end %>
    <% end %>
    <% puts post.likes.where(user_id: current_user.id).any? %>
    <div class="post-actions-comments">4 comments</div>
  </div>
  <div class="post-comments">
    <div class="comment">
      <span class="comment-author">Joe</span>
      This is comment
    </div>
    <div class="comment">
      <span class="comment-author">Doe</span>
      This is comment 2
    </div>
  </div>
</div>


